<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:background="@drawable/shape_view"
            android:textColor="@color/white"
            android:id="@+id/count_rate"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="23552"/>

        <ImageButton
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:src="@drawable/ic_comment"
            android:id="@+id/count_comment_button"
            android:layout_toRightOf="@id/count_rate"
            android:text="17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:textColor="@color/lightGrey"
            android:layout_toRightOf="@id/count_comment_button"
            android:id="@+id/count_comment_text"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="113"/>


        <ImageButton
            android:src="@drawable/ic_share"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:id="@+id/count_answer_button"
            android:layout_toRightOf="@+id/count_comment_text"
            android:text="112"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/lightGrey"
            android:layout_toRightOf="@+id/count_answer_button"
            android:id="@+id/count_answer_text"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="113"/>




    </RelativeLayout>

</RelativeLayout>