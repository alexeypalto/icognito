<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/content_photo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="top|left"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/photo"
            tools:visibility="visible"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/content_video"
            android:layout_marginLeft="15dp"
            android:layout_gravity="top|left"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/video"
            android:visibility="gone"
            tools:visibility="invisible"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/photo_count"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:text="10"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/post_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="5dp"
            android:text="3 ะด."
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"/>

        <ImageButton
            android:id="@+id/post_favorite"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_tab_favorite"/>

        <TextView
            android:id="@+id/post_share_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:text="10"
            android:layout_marginRight="60dp"
            android:layout_gravity="bottom|right"/>

        <ImageButton
            android:id="@+id/post_share"
            android:layout_marginRight="80dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_post_share"/>

        <TextView
            android:id="@+id/post_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:textSize="15sp"
            android:text="10"
            android:layout_marginRight="120dp"
            android:layout_gravity="bottom|right"/>

        <ImageButton
            android:id="@+id/post_comments"
            android:layout_marginRight="140dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"/>

    </android.support.v7.widget.CardView>
</LinearLayout>