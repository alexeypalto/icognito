<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/view_toolbar"
        android:id="@+id/include" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Symbols Count"
        android:background="@color/white"
        android:id="@+id/symbols_text"
        android:gravity="center_vertical"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/symbols_count"
        android:layout_alignEnd="@+id/symbols_count"
        android:paddingLeft="10dp"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="500"
        android:layout_marginTop="10dp"
        android:id="@+id/symbols_count"
        android:gravity="center_vertical"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:layout_below="@+id/include"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchCompat"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/symbols_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Galochka"
        android:textSize="17sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textOn="On"
        android:textOff="Off"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchCompat2"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/switchCompat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Galochka dva"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textOn="On"
        android:textOff="Off"/>
</RelativeLayout>